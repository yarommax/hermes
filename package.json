{
  "name": "hermes-be",
  "version": "0.0.1",
  "description": "",
  "author": "Maksim Maliukevich",
  "license": "MIT",
  "engines": {
    "node": "8.15.1",
    "npm": "6.4.1"
  },
  "scripts": {
    "client": "npm run start --prefix client",
    "client-install": "npm install --prefix client",
    "dev": "concurrently \"npm run start:dev\" \"npm run client\" ",
    "build": "npm run build --prefix client",
    "start": "npm run start:prod",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "./node_modules/.bin/ts-node ./src/main.ts",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run client-install && npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json -t codeFrame"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@types/body-parser": "^1.17.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.0",
    "helmet": "3.15.0",
    "mongoose": "^5.5.5",
    "morgan": "^1.9.1",
    "nestjs-config": "1.3.21",
    "passport": "0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.2",
    "typescript": "^3.2.4",
    "ts-node": "^7.0.1",
    "ts-loader": "^4.4.2",
    "tsconfig-paths": "^3.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "tslint-sonarts": "1.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
